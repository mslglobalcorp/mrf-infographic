    <!-- JavaScript for Charts -->
    <script>
        // Utility function to wrap labels for Chart.js
        function wrapLabel(str, maxChars) {
            if (str.length <= maxChars) return str;
            const words = str.split(' ');
            const lines = [];
            let currentLine = words[0];

            for (let i = 1; i < words.length; i++) {
                if (currentLine.length + 1 + words[i].length <= maxChars) {
                    currentLine += ' ' + words[i];
                } else {
                    lines.push(currentLine);
                    currentLine = words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }

        // Common Tooltip Configuration
        const commonTooltip = {
            callbacks: {
                title: function(tooltipItems) {
                    const item = tooltipItems[0];
                    let label = item.chart.data.labels[item.dataIndex];
                    if (Array.isArray(label)) {
                        return label.join(' ');
                    } else {
                        return label;
                    }
                }
            }
        };

        // --- CHART 1: Stack Effect vs Fan (Bar Chart) ---
        const ctxStack = document.getElementById('stackEffectChart').getContext('2d');
        const stackChart = new Chart(ctxStack, {
            type: 'bar',
            data: {
                labels: [wrapLabel('Standard Roof Fan Capacity', 15), wrapLabel('Stack Effect Pressure (Winter)', 15), wrapLabel('Wind Loading Pressure', 15)],
                datasets: [{
                    label: 'Pressure (Pascals)',
                    data: [150, 200, 180], // Example data showing natural forces exceeding fan capacity
                    backgroundColor: [
                        'rgba(59, 130, 246, 0.7)', // Blue for Fan
                        'rgba(249, 115, 22, 0.7)', // Orange for Stack Effect
                        'rgba(249, 115, 22, 0.5)'  // Lighter Orange for Wind
                    ],
                    borderColor: [
                        'rgb(59, 130, 246)',
                        'rgb(249, 115, 22)',
                        'rgb(249, 115, 22)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    tooltip: commonTooltip,
                    legend: { display: false },
                    title: {
                        display: true,
                        text: 'Pressure Differentials in High-Rise Context'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: { display: true, text: 'Pressure (Pa)' }
                    }
                }
            }
        });

        // --- CHART 2: Kill Rate (Line Chart) ---
        const ctxKill = document.getElementById('killRateChart').getContext('2d');
        const killChart = new Chart(ctxKill, {
            type: 'line',
            data: {
                labels: ['0 min', '1 min', '2 min', '3 min', '4 min (1 ACH)'],
                datasets: [{
                    label: 'Bio-Aerosol Concentration',
                    data: [100, 30, 5, 0.5, 0.01], // Exponential decay
                    borderColor: 'rgb(59, 130, 246)',
                    backgroundColor: 'rgba(59, 130, 246, 0.1)',
                    fill: true,
                    tension: 0.3,
                    pointBackgroundColor: 'rgb(249, 115, 22)',
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: 'rgb(249, 115, 22)'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    tooltip: commonTooltip,
                    legend: { display: true }
                },
                scales: {
                    y: {
                        title: { display: true, text: '% Contaminant Remaining' },
                        type: 'logarithmic',
                        min: 0.01,
                        max: 100
                    }
                }
            }
        });

        // --- CHART 3: Space Savings (Stacked Bar) ---
        const ctxSpace = document.getElementById('spaceSavingsChart').getContext('2d');
        const spaceChart = new Chart(ctxSpace, {
            type: 'bar',
            data: {
                labels: [wrapLabel('Traditional Vertical Riser', 15), wrapLabel('MSL In-Situ Solution', 15)],
                datasets: [
                    {
                        label: 'Sellable/Usable Area',
                        data: [85, 98], // 85% usable with shaft, 98% without
                        backgroundColor: 'rgba(59, 130, 246, 0.8)',
                    },
                    {
                        label: 'Lost Shaft Space',
                        data: [15, 2], // 15% lost to shaft, 2% for unit
                        backgroundColor: 'rgba(249, 115, 22, 0.8)',
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    tooltip: commonTooltip,
                    legend: { position: 'top' },
                },
                scales: {
                    x: { stacked: true },
                    y: { 
                        stacked: true,
                        title: { display: true, text: 'Floor Plate Utilization (%)' },
                        max: 100
                    }
                }
            }
        });

        // --- CHART 4: Compliance (Plotly Bar) ---
        // Using Plotly to demonstrate library usage and create a distinct engineering look for the data section
        const complianceData = [
            {
                x: ['Standard Design', 'MSL Performance Design'],
                y: [100, 20], // VOC Levels
                name: 'VOC Concentration (Units)',
                type: 'bar',
                marker: { color: '#94a3b8' } // Slate 400
            },
            {
                x: ['Standard Design', 'MSL Performance Design'],
                y: [100, 5], // Bio-load
                name: 'Bio-Aerosol Load (%)',
                type: 'bar',
                marker: { color: '#f97316' } // Orange 500
            }
        ];

        const complianceLayout = {
            barmode: 'group',
            title: false,
            paper_bgcolor: 'rgba(0,0,0,0)',
            plot_bgcolor: 'rgba(0,0,0,0)',
            font: { family: 'Inter, sans-serif', color: '#e2e8f0' }, // Light text for dark bg
            margin: { t: 20, b: 40, l: 40, r: 20 },
            showlegend: true,
            legend: { orientation: 'h', y: 1.1 },
            yaxis: { 
                gridcolor: '#334155',
                title: 'Relative Concentration' 
            },
            xaxis: {
                tickfont: { size: 12 }
            }
        };

        const complianceConfig = { responsive: true, displayModeBar: false };

        Plotly.newPlot('compliancePlot', complianceData, complianceLayout, complianceConfig);

    </script>
